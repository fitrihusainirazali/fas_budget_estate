@model MVC_SYSTEM.ModelsBudget.bgt_vehicle_register
@using MVC_SYSTEM.ClassBudget;
@{
    GetBudgetClass GetBudgetClass = new GetBudgetClass();
    ViewBag.Title = GetBudgetClass.GetScreenName("E13");
    int i = 0;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-success">
                <div class="panel-heading">@GetBudgetClass.GetScreenName("E13")</div>
                <fieldset class="panel-body">
                        @Html.HiddenFor(m => m.abvr_id, new { @Class = "form-control"})
                        @Html.HiddenFor(m => m.abvr_budgeting_year, new { @Class = "form-control" })
                        @Html.HiddenFor(m => m.abvr_cost_center_code, new { @Class = "form-control" })
                    <fieldset disabled>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblYear:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("yr", null, new { @class = "form-control", @readonly = "true", @Value = Model.abvr_budgeting_year })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblCostCenter:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("cc", null, htmlAttributes: new { @class = "form-control", @readonly = "true", @Value = Model.abvr_cost_center_code })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Unit:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("ccd", null, htmlAttributes: new { @class = "form-control", @readonly = "true", @Value = Model.abvr_cost_center_desc })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Nama Kenderaan:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("ccd", null, htmlAttributes: new { @class = "form-control", @readonly = "true", @Value = Model.abvr_material_name })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Model Kenderaan:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("ccd", null, htmlAttributes: new { @class = "form-control", @readonly = "true", @Value = Model.abvr_model })
                            </div>
                        </div>
                    </fieldset>
                </fieldset>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResEstate.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnYes.ToUpper() />
        <button class="btn btn-danger" data-dismiss="modal">@GlobalResEstate.btnNo.ToUpper()</button>
    </div>
}