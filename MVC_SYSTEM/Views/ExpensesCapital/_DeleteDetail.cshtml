@model MVC_SYSTEM.ModelsBudget.ViewModels.ExpensesCapitalDeleteDetailViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.titleDelete</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-success">
                    <div class="panel-heading">@ViewBag.Title</div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_budgeting_year)</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.abce_budgeting_year, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_cost_center_code)</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.abce_cost_center_code, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_cost_center_desc)</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.abce_cost_center_desc, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_ast_code)</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.abce_ast_code_category, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_gl_code)</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.abce_gl_code, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_gl_name)</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.abce_gl_name, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_desc)</label>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.abce_desc, htmlAttributes: new { @class = "form-control input-sm", rows = "4", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.abce_jenis_code)</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.abce_jenis_name, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <h3 style="margin-top:0;">
                    <span class="label label-danger">@GlobalResEstate.msgDelete</span>
                </h3>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">@GlobalResEstate.btnYes.ToUpper()</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">@GlobalResEstate.btnNo.ToUpper()</button>
    </div>
}