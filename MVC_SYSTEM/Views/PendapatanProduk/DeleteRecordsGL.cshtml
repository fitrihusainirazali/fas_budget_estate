@model MVC_SYSTEM.ModelsBudget.bgt_income_product[]
@using MVC_SYSTEM.ClassBudget;
@{
    GetBudgetClass GetBudgetClass = new GetBudgetClass();
    ViewBag.Title = "Delete";
    int i = 0;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-success">
                <div class="panel-heading">@GetBudgetClass.GetScreenName("I3")</div>
                <fieldset class="panel-body">
                    @foreach (var val in Model)
                    {
                        @Html.HiddenFor(m => m[i].abip_id, new { @Class = "form-control", @Value = val.abip_id })
                        @Html.HiddenFor(m => m[i].abip_budgeting_year, new { @Class = "form-control", @Value = val.abip_budgeting_year })
                        @Html.HiddenFor(m => m[i].abip_cost_center, new { @Class = "form-control", @Value = val.abip_cost_center })
                        @*@Html.HiddenFor(m => m[i].abip_gl_code, new { @Class = "form-control", @Value = val.abip_gl_code })*@
                        @Html.HiddenFor(m => m[i].abip_product_id, new { @Class = "form-control", @Value = val.abip_product_id })
                        i++;
                    }
                    <fieldset disabled>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblYear:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("budget_year", null, new { @class = "form-control", @readonly = "true", @Value = Model.FirstOrDefault().abip_budgeting_year })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Produk</label>
                            <div class="col-sm-6">
                                @Html.TextBox("product_name", null, new { @class = "form-control", @readonly = "true", @Value = Model.FirstOrDefault().abip_product_code + " - " + Model.FirstOrDefault().abip_product_name })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblCostCenter:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("cc", null, htmlAttributes: new { @class = "form-control", @readonly = "true", @Value = Model.FirstOrDefault().abip_cost_center + " - " + Model.FirstOrDefault().abip_cost_center_desc })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Stesen</label>
                            <div class="col-sm-6">
                                @Html.TextBox("station_name", null, new { @class = "form-control", @readonly = "true", @Value = Model.FirstOrDefault().abip_station_name })
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label class="control-label col-sm-3">GL</label>
                            <div class="col-sm-6">
                                @Html.TextBox("gl", null, new { @class = "form-control", @readonly = "true", @Value = Model.FirstOrDefault().abip_gl_code + " - " + Model.FirstOrDefault().abip_gl_desc })
                            </div>
                        </div>*@
                    </fieldset>
                </fieldset>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResEstate.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnYes.ToUpper() />
        <button class="btn btn-danger" data-dismiss="modal">@GlobalResEstate.btnNo.ToUpper()</button>
    </div>
}